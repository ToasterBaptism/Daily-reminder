<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyReminder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/primary</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <!-- High Contrast Theme -->
    <style name="Theme.DailyReminder.HighContrast" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/high_contrast_primary</item>
        <item name="colorSecondary">@color/high_contrast_secondary</item>
        <item name="android:colorBackground">@color/high_contrast_background</item>
        <item name="colorSurface">@color/high_contrast_surface</item>
    </style>

    <!-- Large Text Theme -->
    <style name="Theme.DailyReminder.LargeText" parent="Theme.DailyReminder">
        <item name="android:textSize">18sp</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.DailyReminder.Headline1.Large</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DailyReminder.Headline2.Large</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DailyReminder.Body1.Large</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DailyReminder.Body2.Large</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.DailyReminder.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.DailyReminder.Headline1.Large">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextAppearance.DailyReminder.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.DailyReminder.Headline2.Large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.DailyReminder.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.DailyReminder.Body1.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.DailyReminder.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.DailyReminder.Body2.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Button Styles -->
    <style name="Button.DailyReminder" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.DailyReminder.Large">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Card Styles -->
    <style name="Card.DailyReminder" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- FAB Styles -->
    <style name="FAB.DailyReminder" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_margin">16dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="FAB.DailyReminder.Large">
        <item name="fabSize">normal</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
</resources>