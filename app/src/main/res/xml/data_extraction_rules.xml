<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" path="backups/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow device transfer for user data -->
        <include domain="database" path="planner_database" />
        <include domain="sharedpref" path="user_preferences.xml" />
        <include domain="file" path="backups/" />
    </device-transfer>
</data-extraction-rules>